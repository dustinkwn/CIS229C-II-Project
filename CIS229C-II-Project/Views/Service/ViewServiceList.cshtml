@model List<CIS229C_II_Project.Models.Service>
@{
    ViewBag.Title = "ViewServiceList";
    Layout = "~/Views/Shared/_ServiceLayout.cshtml";
}

<h2>Service Viewer</h2>

<div>
    <table class="table">
        <tr>
            <th>Service ID</th>
            <th>Service Name</th>
            <th>Service Description</th>
            <th>Service Price</th>



        </tr>
        @if (Model.Count > 0)
        {
            foreach (var service in Model)
            {
                <tr>
                    <td>@service.service_id</td>
                    <td>@service.service_name</td>
                    <td>@service.service_description</td>
                    <td>@service.service_price</td>
                    <td></td>
                </tr>
            }
        }
        else
        {
            ViewBag.Message = "No Services to Display";
        }

    </table>
    @ViewBag.Message
</div>

